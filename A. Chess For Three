#include <bits/stdc++.h>
using namespace std;

int main() 
{
    int t;
    cin>>t;
    while(t--){
      int p1,p2,p3;
      cin>>p1>>p2>>p3;
      int sum=p1+p2+p3;
      if(sum==0) cout<<0<<endl;
      else if(sum%2!=0){
        cout<<-1<<endl;
      }else{
        int sum1=p1+p2;
        if(sum1>=p3) cout<<sum/2<<endl;
        else cout<<sum1<<endl;
      }
    }
}
